{
  "compilerOptions": {
    "module": "commonJS",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@router/*": ["src/router/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@helpers/*": ["src/helpers/*"],
      "@services/*": ["src/services/*"],
      "@data/*": ["src/data/*"],
      "@assets/*": ["src/assets/*"],
      "@themes/*": ["src/themes/*"],
      "@configs/*": ["src/configs/*"],
      "@constants/*": ["src/constants/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
